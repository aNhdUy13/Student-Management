{% extends 'base.html.twig' %}

{% block title %}Welcome to Greenwich !{% endblock %}

{% block header %}{% endblock %}



{% block body %}
<div class="text-center">
    <img src="{{asset('images/greenwich.png')}}" width="550">
<div class="container col-5 mt-5 text-center border-light bg-white">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    
    
    <h1 class="h3 mb-3 font-weight-bolder">WELCOME TO GREENWICH</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember account
            </label>
        </div>

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
<div class="jubotron mt-3">
    <h6 class="text-draken text-uppercase">
        <a href="{{ path('app_register')}}">Register Account</a>
    </h6>
</div>
</div>
</div>
{% endblock %}

